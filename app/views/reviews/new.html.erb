<div class='container new-restaurant'>
<h1><%= @restaurant.name %></h1>
<hr>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, as: :integer %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
  <%= link_to 'Back', restaurants_path %>
</div>
